{% include 'post' %}

<footer class="post-responses">
  {% if post.response_count > 0 %}
    <div class="responses">
      <h4>{{ post.response_count | pluralize: 'singular:Response' }}</h4>
      {% for response in post.responses %}
        {% include 'response' %}
      {% endfor %}
      {% if post.anon_upvote_count > 0 %}
        <div class="response">
          <div class="upvote">
            {{ post.anon_upvote_count | pluralize: 'singular:visitor' }}
            upvoted this post.
          </div>
        </div>
      {% endif %}
    </div>
  {% endif %}

  {% if site.comments_enabled? %}
    <div class="new-comment">
      <h2>Comment</h2>
      {% form 'comment' %}
    </div>
  {% endif %}
</footer>
