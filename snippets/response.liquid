{% case response.type  %}
{% when "comment" %}
  <div class="response">
    <div class="comment-body">
      {{ response.body }}
    </div>
    <div class="byline">
      <strong class="name">{{ response.display_name }}</strong>
      <span class="time-ago">{{ response.created_at | relative_date }}</span>
    </div>
  </div>
{% when "upvote" %}
  {% unless response.anon? %}
    <div class="response">
      <div class="upvote">
        <strong>{{ response.display_name }}</strong>
        upvoted this post.
      </div>
    </div>
  {% endunless %}
{% endcase %}
